@model List<Favorites>

@* Shows newly added item to favorites *@
@if (ViewBag.title != null)
{
    <h1> Added to Favorites!</h1>
    <div>
        @ViewBag.title
    </div>
    <div>
        @ViewBag.name
    </div>
    
}



@* List existing favorites below *@
<table class="table">
    <thead>
        <tr>
            <th>
                Favorite Id
            </th>
            <th>
                User Id
            </th>
            <th>
                Title
            </th>
            <th>
                Artist
            </th>
            <th>
                Album
            </th>
            <th>
                Preview Song
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FavoriteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SongTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </td>
                <td>
                    <img src="@item.AlbumCover" />
                </td>
                <td>
                    <audio controls>
                        <source src="@item.PreviewSong" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </td>
                <td>
                     <a href="@Url.Action("DeleteFavorite", "Music", new {favoriteId = item.FavoriteId})"> Delete </a>
</td>
                
            </tr>
        }
    </tbody>
</table>
